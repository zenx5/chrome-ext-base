{
    "manifest_version": 3,
    "name": "Base Extension",
    "description": "Description",
    "version": "1.0.0",
    "permissions": ["storage", "tabs"],
    "background": {
        "service_worker": "Background.js"
    },
    "action": {
        "default_popup": "index.html?path=popup"
    },
    "options_page":"index.html?path=configuration",
    "content_scripts": [
        {
            "matches": ["https://www.biblegateway.com/passage/*"],
            "js": ["app.js"]
        }
    ]
}